//////////////////////////////////////////////
/// Imports
@import 'nib'
@import 'bootstrap-modal.css'

//////////////////////////////////////////////
/// HTML Tags
body
	padding-top: 40px
	background-image: url("/assets/subtle_dots.png")
	@media (max-width: 979px)
		padding-top: 0

a
	cursor: pointer

svg
	font: 10px sans-sefif
	display: block


//////////////////////////////////////////////
/// Mixins
.center
	text-align: center
	margin: 0 auto

.open-modal
	cursor: pointer

.modal-backdrop
	cursor: pointer

.no-wrap
	white-space: nowrap

input.press-enter, textarea.press-enter
	background: url("/assets/return-symbol.jpg") 98% center no-repeat
	background-color: white
	padding-right: 38px

.icon-move
	&:hover
		cursor: move

.icon-sort
	&:hover
		cursor: move

//////////////////////////////////////////////
/// Explicit Elememt Style
.navbar-inner
	// background-image: none
	.dropdown-menu
		i
			line-height: 20px

#loading
	margin: 60px 0

#intro
	.alert-block
		position: relative
		a.join
			@media (max-width: 567px)
				margin-top: 10px;
			@media (min-width: 568px)
				position: absolute
				bottom: 10px
				right: 10px
