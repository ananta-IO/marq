//////////////////////////////////////////////
/// HTML Tags
body
	padding-top: 40px
	background-image: url("/assets/subtle_dots.png")
	@media (max-width: 979px)
		padding-top: 0

a
	cursor: pointer

svg
	font: 10px sans-sefif
	display: block


//////////////////////////////////////////////
/// Mixins
.center
	text-align: center
	margin: 0 auto

.open-modal
	cursor: -moz-zoom-in
	cursor: -webkit-zoom-in

.modal-backdrop
	cursor: -moz-zoom-out
	cursor: -webkit-zoom-out

.no-wrap
	white-space: nowrap

input.press-enter
	background: url("/assets/return-symbol.jpg") 98% center no-repeat
	background-color: white

//////////////////////////////////////////////
/// Explicit Elememt Style
#loading
	margin: 60px 0

.login-button
	float: right
	&#login-buttons-facebook
		padding-top: 10px
		padding-bottom: 8px
	&:hover
		text-decoration: underline
		cursor: pointer

.btn
	.marq
		background: white
		border: 1px solid #ccc
		border-radius: 20px
		width: 15px
		height: 15px
		float: left
		margin-top: 2px
		margin-right: 10px
		.inner
			display: none
			background: #666
			border-radius: 20px
			width: 9px
			height: 9px
			float: left
			margin-top: 3px
			margin-left: 3px
	&:hover
		.marq
			.inner
				display: block
	&:disabled
		.marq
			.inner
				display: none
	&.selected
		.marq
			.inner
				display: block

#footer
	.addthis_toolbox
		display: inline-block
		vertical-align: top
		margin-top: 1px
		position: relative
		width: 100px
		height: 25px
		a
			position: absolute

#questions-answer
	margin-top: 20px
	.flip
		position: relative
		opacity: 0.4
		height: 108px
		&:hover
			opacity: 1
			cursor: pointer
		p
			position: absolute
			top: 50%
			left: 0
			right: 0

.question
	.answer-choices
		.answer
			text-align: left
			padding-left: 15px

	.comments
		.past-comments
			// min-height: 300px
			max-height: 400px
			overflow: auto
			background-color: #fefefe
			.inner
				.prompt
					margin: 0

#questions-new
	div.textarea
		position: relative
		margin-bottom: 10px
		textarea
			margin: 0
			padding-right: 30px;
		.char-count
			position: absolute
			bottom: 3px
			right: 9px
			z-index: 100
			color: #aaa

#about
	.img-toggle
		width: 100px
		height: 100px
		&:hover
			.headshot
				display: none
			.wtf
				display: block
		.wtf
			display: none


