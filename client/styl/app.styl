	.tooltip-inner
		max-width: 300px

.btn
	.marq
		background: white
		border: 1px solid #ccc
		border-radius: 20px
		width: 15px
		height: 15px
		float: left
		margin-top: 2px
		margin-right: 10px
		.inner
			display: none
			background: #666
			border-radius: 20px
			width: 9px
			height: 9px
			float: left
			margin-top: 3px
			margin-left: 3px
	&:hover
		.marq
			.inner
				display: block
	&:disabled
		.marq
			.inner
				display: none
	&.selected
		.marq
			.inner
				display: block

#footer
	.addthis_toolbox
		display: inline-block
		vertical-align: top
		margin-top: 1px
		position: relative
		width: 100px
		height: 25px
		a
			position: absolute

#questions-answer
	margin-top: 20px
	.flip
		position: relative
		opacity: 0.2
		height: 108px
		&:hover
			opacity: 1
			cursor: pointer
		// &.next-question
		//	p
		//		left: 0
		// &.previous-question
		//	p
		//		right: 0
		.affix
			// top: 60px
		p
			position: absolute
			left: 0
			right: 0
			&.top
				top: 30px
			&.middle
				top: 50%
			&.bottom
				bottom: 30px
			i
				font-size: 30px
	.pager
		.next a, .previous a
			animation-duration: 8s
			animation-delay: 0s
			animation-iteration-count: infinite

.question
	.answer-choices
		.answer
			text-align: left
			padding-left: 15px

	.comments
		.past-comments
			// min-height: 300px
			max-height: 400px
			overflow: auto
			background-color: #fefefe
			.inner
				.prompt
					margin: 0

#questions-new
	div.textarea
		position: relative
		margin-bottom: 10px
		textarea
			margin: 0
			padding-right: 30px;
		.char-count
			position: absolute
			bottom: 3px
			right: 9px
			z-index: 100
			color: #aaa

#about
	.img-toggle
		width: 100px
		height: 100px
		&:hover
			.headshot
				display: none
			.wtf
				display: block
		.wtf
			display: none


