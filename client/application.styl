//////////////////////////////////////////////
/// HTML Tags
body
	padding-top: 40px
	@media (max-width: 979px)
		padding-top: 0

svg
	font: 10px sans-sefif
	display: block


//////////////////////////////////////////////
/// Mixins
.center
	text-align: center
	margin: 0 auto


//////////////////////////////////////////////
/// Explicit Elememt Style
.login-button
	float: right
	&#login-buttons-facebook
		padding-top: 10px
		padding-bottom: 8px
	&:hover
		text-decoration: underline
		cursor: pointer

.btn
	.marq
		background: white
		border: 1px solid #ccc
		border-radius: 20px
		width: 15px
		height: 15px
		float: left
		margin-top: 2px
		margin-right: 10px
	&:hover
		.marq
			.inner
				background: #666
				border-radius: 20px
				width: 9px
				height: 9px
				float: left
				margin-top: 3px
				margin-left: 3px

#answer-question
	margin-top: 20px
	.answer-choices
		.answer
			text-align: left
			padding-left: 15px
